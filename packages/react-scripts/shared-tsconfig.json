{
  "exclude": ["node_modules"],
  "include": ["../../../src/**/*"],
  "compilerOptions": {
    "target": "es5",
    "isolatedModules": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "jsx": "react",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2021", "dom"],
    "baseUrl": "../../../src",
    "paths": {
      "*": ["*", "../../tests/*"]
    },
    "preserveWatchOutput": true
  }
}
